[
  {
    "name": "theme_info",
    "theme_name": "Dawn Multisite",
    "theme_version": "15.2.0-multisite",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Feature Flags",
    "settings": [
      {
        "type": "header",
        "content": "Enquiry System"
      },
      {
        "type": "select",
        "id": "enquiry_system_type",
        "label": "Enquiry System Type",
        "options": [
          {
            "value": "none",
            "label": "Disabled"
          },
          {
            "value": "basic",
            "label": "Basic (Call for Price)"
          },
          {
            "value": "advanced",
            "label": "Advanced (Multi-tier)"
          }
        ],
        "default": "none",
        "info": "Enable product enquiry functionality"
      },
      {
        "type": "checkbox",
        "id": "enquiry_poa",
        "label": "Enable Price on Application",
        "default": false,
        "info": "Show POA option for products"
      },
      {
        "type": "checkbox",
        "id": "enquiry_custom_product",
        "label": "Enable Custom Product Enquiries",
        "default": false,
        "info": "Allow custom product configuration requests"
      },
      {
        "type": "checkbox",
        "id": "enquiry_out_of_stock",
        "label": "Enable Out of Stock Enquiries",
        "default": false,
        "info": "Allow enquiries for unavailable products"
      },
      {
        "type": "text",
        "id": "enquiry_email",
        "label": "Enquiry Email Address",
        "default": "sales@example.com",
        "info": "Email for enquiry notifications"
      },
      {
        "type": "text",
        "id": "enquiry_phone",
        "label": "Enquiry Phone Number",
        "default": "",
        "info": "Phone number for enquiries"
      },
      {
        "type": "header",
        "content": "B2B Features"
      },
      {
        "type": "checkbox",
        "id": "b2b_enabled",
        "label": "Enable B2B Features",
        "default": false,
        "info": "Enable business-to-business functionality"
      },
      {
        "type": "checkbox",
        "id": "b2b_delivery_calculation",
        "label": "Enable Delivery Calculation",
        "default": false,
        "info": "Show delivery cost estimates"
      },
      {
        "type": "checkbox",
        "id": "b2b_accept_alternatives",
        "label": "Require Accept Alternatives",
        "default": false,
        "info": "Customer must accept product substitutions"
      },
      {
        "type": "checkbox",
        "id": "b2b_offload_confirmation",
        "label": "Require Offload Confirmation",
        "default": false,
        "info": "Customer must confirm delivery handling"
      },
      {
        "type": "checkbox",
        "id": "b2b_mega_menu",
        "label": "Enable B2B Mega Menu",
        "default": false,
        "info": "Show advanced navigation for B2B customers"
      },
      {
        "type": "checkbox",
        "id": "b2b_key_selling_points",
        "label": "Show Product Key Points",
        "default": false,
        "info": "Display USPs for B2B customers"
      },
      {
        "type": "header",
        "content": "Shipping Protection"
      },
      {
        "type": "checkbox",
        "id": "shipping_protection_enabled",
        "label": "Enable Shipping Protection",
        "default": false,
        "info": "Auto-add shipping protection to orders"
      },
      {
        "type": "range",
        "id": "shipping_protection_percentage",
        "label": "Protection Percentage",
        "min": 1,
        "max": 10,
        "step": 0.5,
        "default": 3,
        "unit": "%",
        "info": "Percentage of cart value for protection"
      },
      {
        "type": "checkbox",
        "id": "shipping_protection_auto_add",
        "label": "Auto-add on Checkout",
        "default": true,
        "info": "Automatically add protection when checking out"
      },
      {
        "type": "text",
        "id": "shipping_protection_product_handle",
        "label": "Protection Product Handle",
        "default": "shipping-protection",
        "info": "Handle of the shipping protection product"
      },
      {
        "type": "header",
        "content": "Tile Calculator"
      },
      {
        "type": "checkbox",
        "id": "tile_calculator_enabled",
        "label": "Enable Tile Calculator",
        "default": false,
        "info": "Show square meter calculations for tiles"
      },
      {
        "type": "text",
        "id": "tile_calculator_product_types",
        "label": "Applicable Product Types",
        "default": "Tiles,Flooring",
        "info": "Comma-separated list of product types"
      },
      {
        "type": "checkbox",
        "id": "tile_calculator_show_coverage",
        "label": "Show Coverage Area",
        "default": true,
        "info": "Display square meter coverage"
      },
      {
        "type": "header",
        "content": "Product Features"
      },
      {
        "type": "checkbox",
        "id": "grouped_products_enabled",
        "label": "Enable Grouped Products",
        "default": true,
        "info": "Allow product grouping and variants"
      },
      {
        "type": "checkbox",
        "id": "unavailable_products_advanced",
        "label": "Advanced Unavailable Product Handling",
        "default": false,
        "info": "Enhanced messaging for unavailable items"
      },
      {
        "type": "checkbox",
        "id": "product_reviews_enabled",
        "label": "Enable Product Reviews",
        "default": false,
        "info": "Show product review integration"
      },
      {
        "type": "select",
        "id": "product_reviews_provider",
        "label": "Reviews Provider",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "reviews_io",
            "label": "Reviews.io"
          },
          {
            "value": "yotpo",
            "label": "Yotpo"
          },
          {
            "value": "trustpilot",
            "label": "Trustpilot"
          }
        ],
        "default": "none"
      },
      {
        "type": "header",
        "content": "Geographic Targeting"
      },
      {
        "type": "select",
        "id": "geographic_market",
        "label": "Primary Market",
        "options": [
          {
            "value": "global",
            "label": "Global"
          },
          {
            "value": "us",
            "label": "United States"
          },
          {
            "value": "gb",
            "label": "United Kingdom"
          },
          {
            "value": "ireland",
            "label": "Ireland"
          },
          {
            "value": "eu",
            "label": "European Union"
          }
        ],
        "default": "global",
        "info": "Primary geographic market for the store"
      },
      {
        "type": "checkbox",
        "id": "geographic_context_enabled",
        "label": "Enable Geographic Context",
        "default": false,
        "info": "Adjust content based on customer location"
      },
      {
        "type": "header",
        "content": "Analytics & Tracking"
      },
      {
        "type": "checkbox",
        "id": "clerk_analytics_enabled",
        "label": "Enable Clerk Analytics",
        "default": false,
        "info": "Enable Clerk.io tracking"
      },
      {
        "type": "text",
        "id": "clerk_public_key",
        "label": "Clerk Public Key",
        "default": "",
        "info": "Your Clerk.io public API key"
      },
      {
        "type": "header",
        "content": "Cart Features"
      },
      {
        "type": "checkbox",
        "id": "cart_validation_enabled",
        "label": "Enable Cart Validation",
        "default": false,
        "info": "Validate cart before checkout"
      },
      {
        "type": "checkbox",
        "id": "cart_quick_checkout",
        "label": "Enable Quick Checkout",
        "default": true,
        "info": "Show accelerated checkout options"
      },
      {
        "type": "checkbox",
        "id": "cart_show_savings",
        "label": "Show Savings Amount",
        "default": true,
        "info": "Display discount savings in cart"
      },
      {
        "type": "header",
        "content": "UI Components"
      },
      {
        "type": "checkbox",
        "id": "extended_icon_library",
        "label": "Use Extended Icon Library",
        "default": true,
        "info": "Include additional icon assets"
      },
      {
        "type": "checkbox",
        "id": "show_delivery_estimates",
        "label": "Show Delivery Estimates",
        "default": false,
        "info": "Display estimated delivery dates"
      },
      {
        "type": "checkbox",
        "id": "show_stock_levels",
        "label": "Show Stock Levels",
        "default": false,
        "info": "Display inventory quantities"
      },
      {
        "type": "header",
        "content": "Performance"
      },
      {
        "type": "checkbox",
        "id": "lazy_load_images",
        "label": "Lazy Load Images",
        "default": true,
        "info": "Load images as needed for performance"
      },
      {
        "type": "checkbox",
        "id": "optimize_critical_css",
        "label": "Optimize Critical CSS",
        "default": true,
        "info": "Inline critical styles for faster rendering"
      },
      {
        "type": "checkbox",
        "id": "enable_web_fonts",
        "label": "Enable Web Fonts",
        "default": true,
        "info": "Load custom web fonts"
      }
    ]
  }
]